.list {
  padding: 15rpx;
  width: 100%;
  display: flex;
}
.list .list-half {
  display: flex;
  flex-direction: column;
  margin: 0 8rpx;
  width: 346rpx;
  box-sizing: border-box;
}
.list .list-half .post-panel {
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.list .list-half .post-panel .post-photo {
  width: 100%;
  max-height: 400rpx;
}
.list .list-half .post-panel .post-title {
  text-align: left;
  font-size: 30rpx;
  margin: 5rpx 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .list-half .post-panel .user-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  margin: 10rpx 0 0 20rpx;
  float: left;
}
.list .list-half .post-panel .likes {
  display: flex;
  margin: 20rpx 10rpx 15rpx 20rpx;
  float: right;
}
