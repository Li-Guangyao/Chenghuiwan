.list{
	padding: 20rpx;
	width: 100%;
}

.list .list-half {
	display:inline-block;

	margin:0 8rpx;
	width: 346rpx;
	box-sizing: border-box;
}

.list .list-half .post-panel{
	width: 346rpx;
	display: inline-block;

	background-color: #fff;
	border-radius: 10rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}

.post-panel .post-photo{
	width: 100%;
}

.post-title{
	text-align: left;
	font-size: 30rpx;
	margin: 5rpx 20rpx;
}

.user-avatar{
	width: 40rpx;
	height: 40rpx;
	border-radius: 20rpx;
	margin: 10rpx 0 0 20rpx;

	float: left;
}

.likes {
	display: flex;
	margin: 20rpx 10rpx 15rpx 20rpx;
	float: right;
}
