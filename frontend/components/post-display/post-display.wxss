.list{
	padding: 20rpx;
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
}

.list .list-half {
	width: 346rpx;
	box-sizing: border-box;
}

.post-panel{
	background-color: #fff;
	border-radius: 10rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}

.post-panel .post-photo{
	width: 100%;
}

.post-title{
	text-align: left;
	font-size: 30rpx;
	margin: 5rpx 20rpx;
}

.user-avatar{
	width: 40rpx;
	height: 40rpx;
	border-radius: 20rpx;
	margin: 10rpx 0 0 20rpx;

	float: left;
}

.likes {
	display: flex;
	margin: 20rpx 10rpx 15rpx 20rpx;
	float: right;
}
