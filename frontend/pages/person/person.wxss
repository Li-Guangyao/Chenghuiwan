page {
    background-color: var(--themebackgroundcolor);
    width: 100%;
    overflow-x: hidden;
}

.profile {
    height: 240rpx;
    background: #ffffff;
    border-radius: 30rpx;
    margin-bottom: 20rpx;
    overflow-x: hidden;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.profile-photo {
    height: 160rpx;
    width: 160rpx;
    border-radius: 80rpx;
    margin: 20rpx 35rpx;
}

.user-info {
    margin: 0 330rpx 0 0;  

    display: flex;
    flex-direction: column;
}

.user-name {
    font-size: 45rpx;
    margin: 20rpx 15rpx;
}

.gender-img {
    height: 25rpx;
    width: 25rpx;
}

.user-introduction {
    font-size: 25rpx;
    margin: 20rpx 15rpx;
}

.post{
    overflow-x: hidden;
}