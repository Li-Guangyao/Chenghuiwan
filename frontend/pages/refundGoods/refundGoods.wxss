page {
	background-color: var(--themebackgroundcolor);
}

.order{
	background-color: white;
	margin: 0rpx 10rpx 10rpx 10rpx;
	border-radius: 20rpx;
}

.order-card {
	background-color: white !important;
	margin: 10rpx 5rpx !important;
	border-radius: 20rpx !important;
}

.title{
	font-size: 35rpx;
	font-weight: bold;
	padding: 20rpx 30rpx;

}

.info{
	background-color: white;
	margin: 0rpx 10rpx 10rpx 10rpx;
	border-radius: 20rpx;
}

.arrow{
	float: right;
}

.checkbox{
	height: 60rpx;
	margin: 20rpx 30rpx;
}

.save{
	position: fixed;
	width: 100%;
	border-radius: 10rpx;
	bottom: 0;
	background-color: white;
	padding-bottom: env(safe-area-inset-bottom);
}