<navigator class="profile" url="/pages/person/person">
	<image class="profile-photo" src="{{userInfo.avatarUrl}}"></image>
	<!-- <text class="user-name">{{userInfo.nickName}}</text> -->
	<view class="user-info">
		<view>
			<text class="user-name">{{userInfo.nickname}}</text>
			<image mode="widthFix" class="gender-img" src="../../image/male.png"></image>
		</view>
		<text class="user-introduction">啦啦啦啦啦啦</text>
	</view>
	<van-icon class="arrow" name="arrow" size="80rpx" />
</navigator>

<navigator class="all-order" url="../orders/orders?orderType=10">
	全部订单>
</navigator>

<view class="order">
	<van-grid clickable column-num="4">
		<van-grid-item icon="credit-pay" link-type="navigateTo" info="{{orderNum.status0}}" text="待付款" url="../orders/orders?orderType=0"/>
		<van-grid-item icon="paid" link-type="navigateTo" info="{{orderNum.status1}}" text="待发货" url="../orders/orders?orderType=1"/>
		<van-grid-item icon="logistics" link-type="navigateTo" info="{{orderNum.status2}}" text="待收货" url="../orders/orders?orderType=2"/>
		<van-grid-item icon="completed" link-type="navigateTo" info="{{orderNum.status3}}" text="待评价" url="../orders/orders?orderType=3"/>
	</van-grid>
</view>

<view class="setting">
	<van-grid clickable column-num="5">
		<van-grid-item icon="credit-pay" text="我的收藏" url="/pages/collection/collection" link-type="navigateTo" />
		<van-grid-item icon="goods-collect-o" text="收货地址" url="/pages/addressList/addressList" link-type="navigateTo" />
		<van-grid-item icon="service-o" text="客服" url="/pages/customerService/customerService" link-type="navigateTo" />
		<van-grid-item icon="setting-o" text="设置" url="/pages/setting/setting" link-type="navigateTo" />
		<van-grid-item icon="refund-o" link-type="navigateTo" info="{{orderNum.status15}}" text="退款售后" url="../orders/orders?orderType=15" />
	</van-grid>
</view>

