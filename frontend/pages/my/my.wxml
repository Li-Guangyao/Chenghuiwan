<view class="profile">
	<navigator url="/pages/person/person">
		<image class="profile-photo" src="{{userInfo.avatarUrl}}"></image>
		<text class="user-name">{{userInfo.nickName}}</text>
		<image mode="widthFix" class="gender-img" src="../../image/male.png"></image>
		<test class="user-introduction">啦啦啦啦啦啦</test>
		<!-- {{userInfo.introduction}} -->
		<van-icon class="arrow" name="arrow" size="80rpx" />
	</navigator>
</view>

<view class="order">
	<van-grid clickable column-num="4">
		<van-grid-item icon="credit-pay" link-type="navigateTo" info="99+" text="待付款" />
		<van-grid-item icon="paid" link-type="reLaunch" text="待发货" />
		<van-grid-item icon="logistics" link-type="reLaunch" text="待收货" />
		<van-grid-item icon="completed" link-type="reLaunch" text="待评价" />
	</van-grid>
</view>

<view class="setting">
	<van-grid clickable column-num="5">
		<van-grid-item icon="credit-pay" text="我的收藏" url="/pages/collection/collection" link-type="navigateTo" />
		<van-grid-item icon="goods-collect-o" text="收货地址" url="/pages/addressList/addressList" link-type="navigateTo" />
		<van-grid-item icon="refund-o" text="退款售后" url="/pages/setting/setting" link-type="navigateTo" />
		<van-grid-item icon="service-o" text="客服" url="/pages/customerService/customerService" link-type="navigateTo" />
		<van-grid-item icon="setting-o" text="设置" url="/pages/setting/setting" link-type="navigateTo" />
	</van-grid>
</view>

