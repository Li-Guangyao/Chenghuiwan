<view class="swiper-region" hover-class="none" hover-stop-propagation="{{false}}">
  <swiper autoplay="true" interval="2500">
    <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
      <navigator>
        <image mode="widthFix" src="{{item.image_src}}" />
      </navigator>
    </swiper-item>
  </swiper>
</view>

<view class="goods-info">
  <view class="goods-price-desc">
    <view class="price">￥3999</view>
    <view class="desc">商品描述商品描述商品描述</view>
  </view>
  <view class="goods-collect" bind:tap="handlecollect">
    <text class="iconfont {{iscollected?'icon-collected':'icon-collect'}}"></text>
    <view class="collect-tip">收藏</view>
  </view>
</view>

<view class="comment">
  <view class="all-comment">买家评论</view>
  <van-icon name="arrow"/>
</view>

<view class="goods-image">
  <image></image>
</view>

<van-goods-action>
  <van-goods-action-icon icon="share-o" text="分享" bind:click="tapShare" />
  <van-goods-action-icon icon="chat-o" text="客服" bind:click="tapService" />
  <van-goods-action-button text="立即购买" bind:click="tapBuy" />
</van-goods-action>