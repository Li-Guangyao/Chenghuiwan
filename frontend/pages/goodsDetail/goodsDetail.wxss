page{
	background-color: var(--themebackgroundcolor);
}

.page{
	overflow: scroll;
}

.swiper-region{
	height: 600rpx;
	border: 1rpx solid black;
	border-radius: 10rpx;
	margin:0 5rpx;
	background: white;
}

.swiper-region swiper{
	height: 100%;
	width:100%;
}

.swiper-region swiper swiper-item{
	display: flex;
	justify-content: center;
	align-items: center;
}

.swiper-region swiper swiper-item image{
	width:100%;
	height: 100%;
}

.goods-info{
	background: white;
	border: 1rpx solid green;
	display: flex;
	border-radius: 10rpx;
	margin: 5rpx 5rpx;
}

.goods-info .goods-price-desc{
	display: flex;
	flex-direction: column;
	flex: 5;
}

.goods-info .price{
	font-size: 40rpx;
	margin: 10rpx 20rpx 0 20rpx;
}

.goods-info .desc{
	font-size: 25rpx;
	margin: 10rpx 20rpx 10rpx 20rpx;
}

.goods-collect{
	display: flex;
	flex: 1;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	border-left: 2rpx solid rgb(58, 58, 58);
}

.comment{
	background: white;
	height: 100rpx;
	border: 1rpx solid red;
	font-size: 30rpx;
	display: flex;
	margin: 5rpx 5rpx;
	padding: 0rpx 25rpx;
	border-radius: 10rpx;
	align-items: center;
}

.goods-image{
	border: 1rpx solid blue;
	background-color: white;
	margin: 5rpx 5rpx;
	border-radius: 10rpx;

	/* display: flex;
	flex-direction: column; */
	display: block;
}

.goods-image image{
	width: 100%;
}

