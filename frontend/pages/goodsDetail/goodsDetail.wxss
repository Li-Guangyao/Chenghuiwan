page{
	background-color: var(--themebackgroundcolor);
}

.page{
	overflow: scroll;
}

.swiper-region{
	height: 600rpx;
	border-radius: 10rpx;
	margin:0 5rpx;
	background: white;
}

.swiper-region swiper{
	height: 100%;
	width:100%;
}

.swiper-region swiper swiper-item{
	display: flex;
	justify-content: center;
	align-items: center;
}

.swiper-region swiper swiper-item image{
	width:100%;
	height: 100%;
}

.goods-info{
	background: white;
	box-shadow: rgb(200, 200, 200) 2rpx 2rpx 2rpx;
	border-radius: 10rpx;
	margin: 10rpx 5rpx;

	display: flex;
}

.goods-info .goods-price-desc{
	display: flex;
	flex-direction: column;
	flex: 5;
}

.goods-info .price{
	font-size: 40rpx;
	margin: 10rpx 20rpx 0 20rpx;
}

.goods-info .desc{
	font-size: 25rpx;
	margin: 10rpx 20rpx 10rpx 20rpx;
}

.goods-collect{
	border-left: 2rpx solid rgb(220, 220, 220);

	display: flex;
	flex: 1;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.comment{
	background: white;
	height: 100rpx;
	font-size: 30rpx;
	margin: 10rpx 5rpx;
	padding: 0rpx 25rpx;
	border-radius: 10rpx;
	box-shadow: rgb(200, 200, 200) 2rpx 2rpx 2rpx;

	display: flex;
	align-items: center;
}

.goods-image{
	background-color: white;
	margin: 5rpx 5rpx;
	border-radius: 10rpx;
	display: block;
}

.goods-image image{
	width: 100%;
}
