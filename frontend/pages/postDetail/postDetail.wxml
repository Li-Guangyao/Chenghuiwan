<view class="swiper-region" hover-class="none" hover-stop-propagation="{{false}}">
  <swiper autoplay="{{false}}">
    <swiper-item wx:for="{{post.post_photo}}" wx:key="index">
      <image class="post-image" mode="widthFix" src="{{item.url}}" bindtap="previewImage" />
    </swiper-item>
  </swiper>
</view>

<view class="post-text">
  <rich-text>{{post.title}}</rich-text>
  <rich-text>{{post.content}}</rich-text>
  <view class="pub-time">{{post.created_at}}</view>
</view>

<view class="comment">
  <view class="viewer-info">
    <image class="viewer-avatar" mode="aspectFill" src="../../image/postavatar.png"></image>
    <view class="viewer-nickname">评论者昵称</view>
  </view>
  <view class="comment-content">用户评论</view>
</view>


<view class="fixed-region">
  <text class="iconfont icon-like">点赞</text>
  <text class="iconfont icon-collect">收藏</text>
  <textarea class="input-comment" placeholder="说点什么吧！" placeholder-style="text-align:center" auto-height="true" />
  </view>