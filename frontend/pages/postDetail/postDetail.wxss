page{
	background-color: var(--themebackgroundcolor);
}

.swiper-region{
	height: 700rpx;
	border-radius: 10rpx;
	margin:0 5rpx;
	background: white;
}

.swiper-region swiper{
	height: 100%;
	width:100%;
}

.swiper-region swiper swiper-item{
	display: flex;
	justify-content: center;
	align-items: center;
}

.post-image{
	width: 100%;
	height: 100%;
}

.post{
	background: white;
	border-radius: 10rpx;
	margin: 20rpx 10rpx;
}

.post .post-text{
	margin: 10rpx 10rpx;
}

.post .post-text .post-title{
	font-size: 35rpx;
}

.post .post-text .post-content{
	font-size: 25rpx;
}

.comment{
	background: white;
	margin: 5rpx 10rpx;
	padding: 0rpx 25rpx;
	border-radius: 10rpx;

	font-size: 30rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.user-info{
	width: 100%;

	display: flex;
	flex-wrap: nowrap;
	justify-content: flex-start;
	align-items: center;
}

.avatar{
	width: 60rpx;
	height: 60rpx;
	border-radius: 30rpx;
	margin: 10rpx 30rpx;
}

.nickname{
	color: rgb(51, 51, 51);
	font-size: 30rpx;
	margin: 0 30rpx;
}

.pub-time{
	color:rgb(146, 146, 146);
	font-size: 25rpx;
}

.comment .comment-content{
	font-size: 25rpx;
	margin: 20rpx 20rpx;

}


.fixed-region{
	bottom: 0rpx;
	width: 100%;
	background: white;
	border-radius: 10rpx;
	margin: 5rpx 5rpx;
	
	position: fixed;
	display: flex;	
	justify-content: center;
	align-items: center;
	padding-bottom: env(safe-area-inset-bottom);
}

.fixed-region text{
	flex: 1;
	margin: 10rpx 5rpx;
	text-align: center;
	font-size: 35rpx;
}

.input-comment{
	border-radius: 15rpx;
	border: 1rpx solid grey;
	margin: 10rpx 10rpx;
	
	flex: 4;
}