<view class="input-region">
	<view class="title-tip">标题</view>
	<input class="title-input" model:value="{{title}}" focus="true" bindinput="titleInput"></input>
	<view class="content-tip">添加正文</view>
	<editor class="content-input" model:value="{{content}}" bindinput="contentInput" bindready="onEditorReady"></editor>
</view>

<view class="location-topic">
	<navigator id="add-location" url="../../pages/postLocation/postLocation">
		<van-icon name="location-o" />
		<text>添加地点</text>
		<van-icon class="location" name="arrow" />
	</navigator>

	<navigator id="add-topic" url="../../pages/topic/topic">
		<text># 添加话题</text>
		<van-icon class="topic" name="arrow" />
	</navigator>
</view>

<view class="upload-photo">
	<van-uploader file-list="{{fileList}}" accept="image" bind:after-read="chosenImage" bind:delete="removeImage"
	multiple preview-size="235rpx" image-fit="aspectFill" preview-image="true" max-count="9" />
</view>

<view class="buttons">
	<van-button custom-class="clearContent" bindtap="clearContent">清空内容</van-button>
	<van-button custom-class="publishPost" bindtap="publishPost">发布笔记</van-button>
</view>