<navigator class="await-payment" wx:if="{{orderType==0}}">
	<van-card num="2" tag="待付款" price="10.00" desc="描述信息" title="商品标题" thumb="{{ imageURL }}" thumb-mode="aspectFill"
		custom-class="order-card" price-class="price">
		<view slot="footer">
			<van-button size="small">去付款</van-button>
		</view>
	</van-card>
</navigator>

